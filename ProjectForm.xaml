<Window x:Class="ProjectManagementApp.Views.ProjectForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       
        Title="Add/Edit Project" Height="400" Width="500">

    

    <Grid Margin="10">
        <StackPanel>
            
            <Grid>
                <TextBox x:Name="txtName" Width="300" Margin="5" HorizontalAlignment="Left"/>
                <TextBlock Text="Project Name" Foreground="Gray" VerticalAlignment="Center" 
                           HorizontalAlignment="Left" Margin="10,0,0,0" IsHitTestVisible="False" 
                           />
            </Grid>

            
            <Grid>
                <DatePicker x:Name="dpStartDate" Width="300" Margin="5" HorizontalAlignment="Left"/>
                <TextBlock Text="Start Date" Foreground="Gray" VerticalAlignment="Center" 
                           HorizontalAlignment="Left" Margin="10,0,0,0" IsHitTestVisible="False" 
                           />
            </Grid>

            <!-- End Date -->
            <Grid>
                <DatePicker x:Name="dpEndDate" Width="300" Margin="5" HorizontalAlignment="Left"/>
                <TextBlock Text="End Date" Foreground="Gray" VerticalAlignment="Center" 
                           HorizontalAlignment="Left" Margin="10,0,0,0" IsHitTestVisible="False" 
                           />
            </Grid>

            
            <Grid>
                <TextBox x:Name="txtManager" Width="300" Margin="5" HorizontalAlignment="Left"/>
                <TextBlock Text="Manager" Foreground="Gray" VerticalAlignment="Center" 
                           HorizontalAlignment="Left" Margin="10,0,0,0" IsHitTestVisible="False" 
                          />
            </Grid>

            
            <Grid>
                <TextBox x:Name="txtCustomer" Width="300" Margin="5" HorizontalAlignment="Left"/>
                <TextBlock Text="Customer" Foreground="Gray" VerticalAlignment="Center" 
                           HorizontalAlignment="Left" Margin="10,0,0,0" IsHitTestVisible="False" 
                           />
            </Grid>

            
            <Grid>
                <TextBox x:Name="txtService" Width="300" Margin="5" HorizontalAlignment="Left"/>
                <TextBlock Text="Service" Foreground="Gray" VerticalAlignment="Center" 
                           HorizontalAlignment="Left" Margin="10,0,0,0" IsHitTestVisible="False" 
                           />
            </Grid>

            
            <Grid>
                <TextBox x:Name="txtTotalPrice" Width="300" Margin="5" HorizontalAlignment="Left"/>
                <TextBlock Text="Total Price" Foreground="Gray" VerticalAlignment="Center" 
                           HorizontalAlignment="Left" Margin="10,0,0,0" IsHitTestVisible="False" 
                           />
            </Grid>

            
            <ComboBox x:Name="cmbStatus" Width="300" Margin="5" HorizontalAlignment="Left">
                <ComboBoxItem Content="In Progress"/>
                <ComboBoxItem Content="Completed"/>
                <ComboBoxItem Content="Cancelled"/>
            </ComboBox>

            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Save" Click="Save_Click" Width="100" Margin="5"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

